<resources>

    <!-- frogo_recycler_view attrs -->
    <declare-styleable name="frogo_recycler_view">

        <attr name="frv_empty_image_width" format="dimension" />
        <attr name="frv_empty_image_height" format="dimension" />
        <attr name="frv_empty_image_src" format="reference|color" />

        <attr name="frv_empty_title_text" format="string" />
        <attr name="frv_empty_title_color" format="reference|color" />

        <attr name="frv_empty_subtitle_text" format="string" />
        <attr name="frv_empty_subtitle_color" format="reference|color" />

        <attr name="frv_progress_bar_width" format="dimension" />
        <attr name="frv_progress_bar_height" format="dimension" />

    </declare-styleable>

    <!-- frogo_shimmer_recycler_view attrs -->
    <declare-styleable name="frogo_shimmer_recycler_view">

        <attr name="frvPaddingTop" format="dimension" />
        <attr name="frvPaddingRight" format="dimension" />
        <attr name="frvPaddingBottom" format="dimension" />
        <attr name="frvPaddingLeft" format="dimension" />

        <attr name="frvClipToPadding" format="boolean" />

    </declare-styleable>

    <!-- frogo_shimmer_recycler_view attrs -->
    <declare-styleable name="frogo_progress_recycler_view">

        <attr name="fprvPaddingTop" format="dimension" />
        <attr name="fprvPaddingRight" format="dimension" />
        <attr name="fprvPaddingBottom" format="dimension" />
        <attr name="fprvPaddingLeft" format="dimension" />

        <attr name="fprvClipToPadding" format="boolean" />

        <attr name="fprvProgressWidth" format="dimension"/>
        <attr name="fprvProgressHeight" format="dimension"/>
        <attr name="fprvProgressVisibility" format="integer"/>

    </declare-styleable>



</resources>